import sys

# from zyxelprometheus import get_arguments, login, logout, prometheus, scrape_ifconfig, scrape_xdsl, serve, VMG1312B10D
from zyxelprometheus import get_arguments, login, logout, prometheus, serve
from zyxelprometheus import InvalidArguments
from zyxelprometheus.server import Scraper


def main():
    try:
        args = get_arguments(sys.argv[1:])
    except InvalidArguments as e:
        sys.stderr.write(f"Invalid Arguments: {e.args[0]}\n")
        sys.exit(1)

    if args.serve:
        serve(args)
    else:
        # session = login(args.host, args.user, args.passwd)
        #
        # device = VMG1312B10D(session)

        scraper = Scraper(args)
        xdsl, ifconfig = scraper.scrape()

        if args.raw:
            if xdsl is not None:
                print(xdsl)
            if ifconfig is not None:
                print(repr(ifconfig))
        else:
            print(prometheus(xdsl, ifconfig, scraper.device))

        logout(scraper.session)


if __name__ == "__main__":
    main()
